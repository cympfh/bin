#!/bin/bash

usage() {
  cat << HELP
Usage: tw-icon <image>

image is specified by url or local-path
HELP
}

if [ $# -lt 1 -o "_$1" == "_-h" -o "_$1" == "_-?" ]; then
  usage
  exit 0
fi

case $1 in
  http*)
    LOC="/tmp/${1##*/}"
    wget --quiet -O $LOC $1
    ;;
  *)
    LOC=$1
    ;;
esac

twurl -X POST -d image=$( cat $LOC |base64 -w0 ) "/1.1/account/update_profile_image.json"
